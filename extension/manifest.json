{
    "manifest_version": 2,
    "name": "Chat Danmaku (Beta)",
    "description": "Show chat messages as danmaku over videos.",
    "version": "0.2.2",
    "homepage_url": "https://github.com/kevinptt0323/chat-danmaku",
    "icons": { "16": "icons/icon-16.png",
               "48": "icons/icon-48.png",
               "128": "icons/icon-128.png" },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["*://garena.live/*", "*://www.twitch.tv/*"],
            "js": [
                "index.js"
            ],
            "css": [
                "index.css"
            ]
        }
    ]
}
